<%= link_to "New State", new_admin_state_path %>

<ul id="states">
  <% @states.each do |state| %>
    <li id="state_<%= state.id %>">
      <%= state.name %>
      <%= link_to "Make Default",make_default_admin_state_path(state) %>
      <%= link_to "Delete State", admin_state_path(state), method: :delete, data: { confirm: "Are you sure you want to delete this state?" }  %>
    </li>
  <% end %>
</ul>

